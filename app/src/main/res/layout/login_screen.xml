<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/splash_screen_background"
    tools:context=".loginandregistercomponents.LoginScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_kampus"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:paddingStart="@dimen/_33sdp"
            android:paddingEnd="@dimen/_33sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.105"
            tools:layout_editor_absoluteX="-16dp"
            tools:ignore="RtlSymmetry">

            <EditText
                android:id="@+id/nim_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/edit_text"
                android:drawableStart="@drawable/ic_nim_ic"
                android:drawablePadding="21dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/hint_nim"
                android:paddingStart="15dp"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/passwd_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edit_text"
                android:drawableStart="@drawable/ic_pass_ic"
                android:drawablePadding="18dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:hint="@string/hint_password"
                android:paddingStart="15dp"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_10ssp"
                android:inputType="textPassword"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/fp_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_9ssp"
                android:text="@string/forgot_password"
                android:textColor="@color/white"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="@dimen/_122sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.566"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rgstr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="Mahasiswa Baru ?"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.402"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.643"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/rgstr_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/daftarkan"
                android:textAllCaps="false"
                android:textColor="#1EDFE8"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.659"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.643"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="47dp"
            android:paddingEnd="41dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.927"
            tools:ignore="RtlSymmetry"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/informasi_login"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:background="@drawable/info_login"
                android:paddingHorizontal="16dp"
                android:paddingTop="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/info_login_isi"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="29dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/info_logo_isi_2"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>