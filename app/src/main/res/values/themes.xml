<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Apps_siadin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#052E58</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalendarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CalendarDayTextStyle" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CalendarWeekTextStyle" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="navButton" >
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <style name="selectedUnselected" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/textActive</item>
        <item name="itemTextAppearanceInactive">@style/textInActive</item>
    </style>

    <style name="textTab" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textActive">
        <item name="iconSelected">@color/color_selector</item>
        <item name="android:textColor">#FEC20F</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="textInActive">
        <item name="iconUnselected">@color/color_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">9sp</item>
    </style>
    
</resources>